{{>header}}
<form class="story-form" action="#/stories/{{story._id}}/edit" method="POST">
    <h2>Edit A Story</h2>
    <p class="title">
        <label for="title">Title</label>
        <input type="text" name="title" placeholder="Story Title" value="{{story.title}}">
    </p>
    <p class="content">
        <label for="content">Content</label>
        <textarea name="content" id="" cols="120" rows="20">{{story.content}}</textarea>
    </p>
    <input type="submit" value="Edit">
    <div class="invisible">
        <input type="text" name="username" value="{{story.creatorUsername}}">
        <input type="text" name="gender" value="{{story.creatorGender}}">
        <input type="text" name="date" value="{{story.date}}">
        <input type="text" name="likes" value="{{story.likes}}">
    </div>
</form>
{{>footer}}